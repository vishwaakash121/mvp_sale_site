<div class="container">
	<% @deals.each do |deal| %>
		<div class="row justify-content-center">
			<div class="col-8 mt-4">
				<div class="card text-center shadow mb-5 bg-white rounded">
					<div class="card-header fst-italic">
						<% if deal.user %>
							by <%= link_to deal.user.username, user_path(deal.user) %>
						<% end %>
					</div>
					<%= render partial: 'deals/details', locals: { deal: deal } %>
				</div>
			</div>
		</div>
	<% end %>
</div>